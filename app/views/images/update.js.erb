<% if @image.errors.any? -%>
  flash_hide();
  $("#image_form").html("<%= escape_javascript(render(:partial => "edit_form")) %>");
<% else -%>
  <% flash.each do |key, value| %>
    $('<div />')
    .addClass("flash <%= escape_javascript(key.to_s)%>")
    .html("<%= escape_javascript(value)%>")
    .hide()
    .appendTo('.flashes')
    .show(300);
  <% end %>
  $("#image_form").html("<%= escape_javascript(render(:partial => "form")) %>");
  setTimeout(flash_hide,3000);
  $("#image_list").html("<%= escape_javascript(render(:partial => "list")) %>");
  zebra();
  lightbox();
  linkbox();
<% end -%>
