<table>
  <% for page in @pages %>
    <tr>
      <% icon_class = (page.nested) ? "ui-button ui-icon-arrowthick-1-w" : "ui-button ui-icon-arrowthick-1-e" %>
      <td <%= raw "class=\"nested\"" unless !page.nested %>>
        <%= link_to page.title, page_path(page) %><td>
      <td class="icon"><% if page != @pages.first %>
        <%= link_to "", toggle_url(:id => "#{page.id}-#{page.permalink}") ,
        :remote => true, :class => icon_class, :title => t("pages.toggle") %> 
        <% end %></td>
      <td class="icon"><% if page != @pages.first %>
        <%= link_to "", up_url(:id => "#{page.id}-#{page.permalink}") ,
        :remote => true, :class => "ui-button ui-icon-arrowthick-1-n", :title => t("pages.up") %> 
        <% end %></td>
      <td class="icon"><% if page != @pages.last %>
        <%= link_to "", down_url(:id => "#{page.id}-#{page.permalink}") ,
        :remote => true, :class => "ui-button ui-icon-arrowthick-1-s", :title => t("pages.down") %> 
        <% end %></td>
      <td class="icon"><%= link_to "", edit_page_path(page), :remote => true, 
        :class => "ui-button ui-icon-wrench", :title => t("pages.edit") %></td>
      <td class="icon"><%= link_to "", page, :remote => true, 
        :confirm => t("pages.confirmation"), :method => :delete, 
        :class => "ui-button ui-icon-trash", :title => t("pages.delete") %></td>
    </tr>
  <% end %>
</table>
