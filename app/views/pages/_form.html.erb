<%= form_for(@page, :remote => true) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 100, :rows => 20 %>
  </div>
  <div class="field">
    <%= f.label :locale %><br />
    <%= f.select(:locale, options_for_select(available_locales)) %>
  </div>
  <div class="field">
    <%= f.label :nested %><br />
    <%= f.check_box :nested %>
  </div>
  <div class="actions">
    <%= f.submit t("pages.create") %>
  </div>
<% end %>
