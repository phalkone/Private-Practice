<p><a class="ui-button ui-icon-document" title="<%= t("pages.clear") %>"</a>
<a class="ui-button ui-icon-closethick" title="<%= t("pages.close") %>"></a></p><br />
<%= form_for(@page, :remote => true) do |f| %>
  <%= render 'shared/error_messages', :object => f.object, :modelname =>  Page.model_name.human.downcase %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <a href="[url]" class="markdown">[url]</a><br />
    <%= f.text_area :body, :class => "resizable", :cols => 80, :rows => 20 %>
    <%= link_to "Help", "Markdown _basics.html", :class => "lightbox frame" %>
  </div>
  <div class="field">
    <%= f.label :nested %><br />
    <%= f.check_box :nested %>
  </div>
  <div class="actions">
    <%= f.submit @submit_text %>
  </div>
<% end %>
