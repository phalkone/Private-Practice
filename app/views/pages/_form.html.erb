<p><a class="ui-button ui-icon-document" title="<%= t("pages.clear") %>"</a>
<a class="ui-button ui-icon-closethick" title="<%= t("pages.close") %>"></a></p><br />
<% if @page then %>
  <% url = page_path(@page) %>
<% else %>
  <% url = pages_path %>
<% end %>
<%= form_for(@page_content,:url => url, :remote => true) do |f| %>
  <%= render 'shared/error_messages', :object => f.object, :modelname =>  Page.model_name.human.downcase %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %> <br />
    (<%= link_to "Markdown Basics", "Markdown_basics.html", :class => "lightbox frame small" %> Â·  
    <%= link_to "Markdown Syntax", "Markdown_syntax.html", :class => "lightbox frame small" %>)<br />
    <%= f.text_area :body, :class => "resizable", :cols => 80, :rows => 20 %>
  </div>
  <div class="field">
    <select name="images" id="image_select">
      <% @images.each do |image| %>
        <% image_link = "![" + image.name + "]\(" + image_url(image) +  " \"" + image.description + "\"\)" %>
        <option value='<%= image_link %>'><%= image.name %></option>
      <% end %>
    </select> <%= link_to t("pages.insert"), "", :id => "insert_image", :class => "small" %>
  </div>
  <div class="field">
    <%= f.label :html %><br />
    <%= f.check_box :html %>
  </div>
  <%= f.hidden_field :locale %>
  <div class="actions">
    <%= f.submit @submit_text %>
  </div>
<% end %>
