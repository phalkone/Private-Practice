<% flash.each do |key, value| %>
    $('<div />')
    .addClass("flash <%= escape_javascript(key.to_s)%>")
    .html("<%= escape_javascript(value)%>")
	.css({"position" : "fixed", "top" : "10px", "left" : "10px","z-index" :"10"})
    .hide()
    .appendTo('.flashes')
    .show(300);
<% end %>
setTimeout(flash_hide,3000);
refresh(false);