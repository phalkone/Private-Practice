<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
<title><%= title %></title>

<%= stylesheet_link_tag :all %>
<%= yield :styles %>

<%= javascript_include_tag :defaults %>
<%= yield :scripts %>

<%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <% if signed_in? %>
   <div id="logged_box">
     <p>Logged in as <%= current_user.first_name + " " + current_user.last_name %> (<%= link_to "Sign out", signout_path, :method => :delete %>)</p>
   </div>
  <% else %>
    <%= render :partial => "shared/loginform" %>
  <% end %>
  <%= render :partial => "shared/header" %>
  <% if @menu %>
    <%= render :partial => "shared/menu" %>
  <% else %>
    <%= render :partial => "shared/admin_menu" %>
  <% end %>
  <div class="x"></div>
  <div id="content">
    <div class="flashes"></div>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
  <div class="x"></div>
  <%= render :partial => "shared/footer" %>
</div>
</body>
</html>
