<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
<title><%= t("txt.private") %><%= t("txt.practice") %> <% if @page %>
  - <%= @page.title %>
  <% end %></title>
<%= stylesheet_link_tag :all %>
<%= javascript_include_tag :defaults %>
<%= csrf_meta_tag %>
</head>
<body>
<div id="container">
  <div id="login_box">
    <form>
      <div>
        <input value="<%= t("txt.email") %>" type="text" name="email" id="email" size="33"/>
      </div>
      <div>
        <input value="<%= t("txt.password") %>" type="password" name="password" id="password" size="33"/>
      </div>
      <div>
        <input type="submit" name="<%= t("txt.login") %>" id="login" value="Login">
        <input type="checkbox" name="chkremember" id="chkremember"/>
        <label for="chkremember"><span class="small"><%= t("txt.remember") %></span></label>
        <a href="#" alt="Forgot login"><span class="small"><%= t("txt.forgot") %></span></a>
      </div>
    </form>
  </div> 
  <div id="header">
    <p class="title"><span class="red"><%= t("txt.private") %></span><%= t("txt.practice") %><p>
  </div>
   <%= render :partial => "shared/menu" %>
  <div class="x"></div>
  <div id="content">
   <div id="flash_notice" style="display:none"></div>
   <%= yield %>
  </div>
  <div class="x"></div>
  <div id="footer">
    <p class="right"><a href="#">Route</a> Â· <a href="#">Contact</a></p>
    <p>Copyright &copy; 2010 <a href="#">Tim Pintens</a></p>
  </div>
</div>
</body>
</html>
