<div id="header" class="span-24 last">
	<div id="login_box">
	<% if signed_in? %>
	 	<p><%= t("txt.logged") + " " %>
	    <span <%= "class='bold'" if menu_active == "profile" %>><%= link_to current_user.first_name + " " + current_user.last_name, current_user %></span> | 
	    <%= link_to t("txt.signout"), signout_path, :method => :delete %></p>
	<% else %>
		<%= render :partial => "shared/loginform" %>
	<% end %>
	</div><img src="/assets/logo.png" alt="" id="logo"/> 
	<p><%= link_to (root_path), :id => "title" do %><span class="red"><%= t("txt.private") %></span><%= t("txt.practice") %><% end %></p>
</div>
<div class="x"></div>
<div id="menu">
<%= render :partial => "shared/menu" %>
</div>
<hr>
