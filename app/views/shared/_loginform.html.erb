<div id="login_box">
  <form>
    <div>
      <%= text_field_tag "email", t("txt.email"), :class => "clear", :size => "33" %>
    </div>
    <div>
      <%= text_field_tag "password", t("txt.password"), :id => "hide_pass", :size => "33" %>
      <%= password_field_tag "password","", :id => "show_pass", :style => "display:none", :size => "33" %>
    </div>
    <div>
      <input type="submit" name="<%= t("txt.login") %>" id="login" value="Login">
      <input type="checkbox" name="chkremember" id="chkremember"/>
      <label for="chkremember"><span class="small"><%= t("txt.remember") %></span></label>
      <a href="#" alt="Forgot login"><span class="small"><%= t("txt.forgot") %></span></a>
    </div>
  </form>
</div> 
