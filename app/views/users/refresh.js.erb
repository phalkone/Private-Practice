<% flash.each do |key, value| %>
  $('<div />')
  .addClass("flash <%= escape_javascript(key.to_s)%>")
  .html("<%= escape_javascript(value)%>")
  .hide()
  .appendTo('.flashes')
  .show(300);
<% end %>

$("<%= escape_javascript(@div) %>").html("<%= escape_javascript(render(:partial => @partial)) %>");
initialize();
setTimeout(flash_hide,5000);
